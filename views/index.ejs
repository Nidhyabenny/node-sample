<script>
  function handleSubmit(e) {
    e.preventDefault();
    var data = {
      username: $("#username").val(),
      password: $("#password").val()
    }
    $.ajax({
      type: "POST",
      url: "http://localhost:3000/users/login",
      data: data,
      dataType: 'json',
      success: function (response) {
        if (response.status === true) {
          alert("Login Success");
          window.setTimeout(function () {
                location.href = "/home";
              },1000);
        } 
        else {
          alert("Failed");
          window.setTimeout(function () {
                location.href = "/register";
              },1000);
        }
      },
    });
  }
</script>